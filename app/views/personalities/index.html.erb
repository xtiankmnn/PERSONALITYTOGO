<h1>Personalities#index</h1>
<p>Find me in app/views/personalities/index.html.erb</p>

<div class="container">
  <div class="row">
    <% @personalities.each_with_index do |personality, i| %>
      <div class="col-md-3 mb-4">
        <div class="card" style="width: 18rem;">

          <%= image_tag "cards/#{personality.code}.svg"%>
          <div class="card-body">
            <h5 class="card-title"><%= personality.name %></h5>
            <p class="card-text"><%= personality.description %></p>
             <%= link_to 'See More', personality_path(personality), class: 'btn btn-info' %>
          </div>
        </div>
      </div>
      <% if (i + 1) % 4 == 0 %>
        </div><div class="row">
      <% end %>
    <% end %>
  </div>
</div>
