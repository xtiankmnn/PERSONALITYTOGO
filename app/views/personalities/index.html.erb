<div class="container">



<% unless current_user.personality.nil?  %>
<div class="row-md-3 mb-4">
<h5>Your brand new personality is <h2> <%=  current_user.personality.name %></h2></h5>
<h4>Are you not happy with that?</h4>
<p>
<%= link_to "RENT IT", sell_personality_path(current_user.personality), class:"btn btn-info"  %>
</p>
</div>
<% end %>
<h4>Check our personalities to go</h4>

</div>

<div class="container">
  <div class="row">
    <% @personalities.each do |personality| %>
      <div class="col-md-3 mb-4 shadow p-7 mb-4 rounded">
        <div class="card h-100" style="width: 18rem;">
          <%= image_tag "cards/#{personality.code}.svg", class: "card-img-top", alt: "personalities" %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= personality.name %></h5>
            <p class="card-text"><%= personality.description %></p>
            <%= link_to 'See More', personality_path(personality), class: 'btn btn-info mt-auto' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
